<!DOCTYPE html>
<html>
<head>
    <% include ./partials/head.ejs %>
</head>
<body>
<header>
    <% include ./partials/header.ejs %>
</header>

<main>
    <div class="container body-content">
        <hr/>
        <div>
            <h4><%=person.firstName%> <%=person.lastName%></h4>
            <dl class="dl-horizontal">
                <!-- Birth Date -->
                <dt>Birth Date</dt>
                <dd><%=person.birthDate.slice(0, 10)%></dd>

                <!-- Age -->
                <dt>Age</dt>
                <dd><%=person.age%>
                </dd>

                <!-- Address1 -->
                <dt>Address</dt>
                <dd>
                    <%=person.address1 %><br/>
                    <%=person.address2 %>
                </dd>

                <!-- Interests -->
                <dt>Interests</dt>
                <dd><%=person.interests%></dd>

                <!-- Image -->
                <dt>Image</dt>
                <dd>
                    <img class="img-rounded" height="250"
                         src="<%=person.image%>"
                         alt="<%=person.fullName%> "
                         title="<%=person.fullName%> "/>
                </dd>
            </dl>
        </div>

        <p>
            <a href="/">Back to List</a>
        </p>
    </div>
</main>
<footer>
    <% include ./partials/footer.ejs %>
</footer>
</body>
</html>