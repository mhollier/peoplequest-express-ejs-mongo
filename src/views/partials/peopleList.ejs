<div id="peopleList">
    <table class="table">
        <tr>
            <th>Image</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Interests</th>
            <th></th>
        </tr>
        <% for (var i = 0; i < people.length; i++) { %>
        <tr>
            <!-- Image with hyperlink to details -->
            <td>
                <!-- If the user clicks the image, navigate to person details page. -->
                <a href="/people/<%= people[i]._id %>">
                    <!-- Get the user image -->
                    <img class="img-rounded" height="100"
                         src="<%= people[i].image %>"
                         alt="<%= people[i].fullName %>"
                         title="<%= people[i].fullName %>"/>
                </a>
            </td>
            <!-- FirstName -->
            <td>
                <%= people[i].firstName %>
            </td>
            <!-- LastName -->
            <td>
                <%= people[i].lastName %>
            </td>
            <!-- Age -->
            <td>
                <%= people[i].age %>
            </td>
            <!-- Address -->
            <td>
                <%= people[i].address1 %><br/>
                <%= people[i].address2 %>

            </td>
            <!-- Interests -->
            <td>
                <% var interests = people[i].interests.split(",");
                   for (var j=0; j<interests.length; j++) { %>
                      <%=interests[j]%><br/>
                <% } %>
            </td>
            <td>
                <a class="btn btn-sm btn-default" href="/people/edit/<%=people[i]._id%>"
                   style="width: 70px; margin: 2px;">Edit </a><br/>
                <a class="btn btn-sm btn-default" href="/people/delete/<%=people[i]._id%>"
                   style="width: 70px; margin: 2px;">Delete</a>
            </td>
        </tr>
        <% } %>

    </table>

    <!-- pagination -->
    <div>
        <ul class="pagination">
            <% for (var i = 1; i <= pageCount; i++) { %>
                <%if (i == page) {%>
                    <li class="active"><a href="/people?page=<%=i%>"><%=i%></a></li>
                <%} else { %>
                    <li><a href="/people?page=<%=i%>"><%=i%></a></li>
                <% } %>
            <% } %>
        </ul>
    </div>
</div>
