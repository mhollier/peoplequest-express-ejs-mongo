<div id="peopleList">
    <table class="table">
        <tr>
            <th>Image</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Interests</th>
            <th></th>
        </tr>
        <% for (var i = 0; i < people.length; i++) { %>
        <tr>
            <!-- Image with hyperlink to details -->
            <td>
                <!-- If the user clicks the image, navigate to person details page. -->
                <a href="/people/<%= people[i]._id %>">
                    <!-- Get the user image -->
                    <img class="img-rounded" height="100"
                         src="<%= people[i].image %>"
                         alt="<%= people[i].firstName %>"
                         title="<%= people[i].firstName %>"/>
                </a>
            </td>
            <!-- FirstName -->
            <td>
                <%= people[i].firstName %>
            </td>
            <!-- LastName -->
            <td>
                <%= people[i].lastName %>
            </td>
            <!-- Age -->
            <td>
                <%= people[i].birthDate %>
            </td>
            <!-- Address -->
            <td>
                <%= people[i].address1 %><br/>
                <%= people[i].address2 %>

            </td>
            <!-- Interests -->
            <td>
                Magic<br/>
                Fire<br/>
                Burning People at the Stake
            </td>
            <td>
                <a class="btn btn-sm btn-default" href="#"
                   style="width: 70px; margin: 2px;">Edit </a><br/>
                <a class="btn btn-sm btn-default" href="#"
                   style="width: 70px; margin: 2px;">Delete</a>
            </td>
        </tr>
        <% } %>

    </table>
</div>
